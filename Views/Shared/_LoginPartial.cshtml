@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/User/Reservations" title="Manage">My Reservations</a>
    </li>
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Admin/Reservations" title="Manage">Admin Panel</a>
        </li>
    }
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark"><b>Logout</b></button>
        </form>
    </li>
}
else
{
    <li class="active"><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
    <li class="active"><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
}
