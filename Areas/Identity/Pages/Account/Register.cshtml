@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <fieldset class="p-4">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" placeholder="Email*" class="border p-3 w-100 mb-2" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="Input.Name"></label>
                                    <input asp-for="Input.Name" placeholder="Name*" class="border p-3 w-100 mb-2" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Input.Surname"></label>
                                    <input asp-for="Input.Surname" placeholder="Surname*" class="border p-3 w-100 mb-2" />
                                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" placeholder="Password*" class="border p-3 w-100 mb-2" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password*" class="border p-3 w-100 mb-2" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="d-block my-2 py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold">Register Now</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
